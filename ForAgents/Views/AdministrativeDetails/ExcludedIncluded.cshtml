@using CorneTest.Models

@{
    ViewBag.Title = "Excluded or Included";

}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Hire me - Brand</title>

    <style>

        .nospin::-webkit-inner-spin-button, .no-spin::-webkit-outer-spin-button {
            -webkit-appearance: none !important;
            margin: 0 !important;
        }

        .no-spin {
            -moz-appearance: textfield !important;
        }

        /*        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }*/

        .italic-label {
            font-style: italic;
        }

        .Labels {
            font-style: italic;
        }

        input[type='radio'] {
            transform: scale(1.5);
        }

        input[type='checkbox'] {
            transform: scale(1.5);
        }
    </style>
</head>

<body>

    <main class="page hire-me-page" data-target="#modal1" data-toggle="modal">
        <section class="portfolio-block hire-me">
            <div class="container" id="container-form-page">
                <form class="page hire-me-page smart-form-form-page" id="smart-form-form-page" method="post" enctype="multipart/form-data" asp-controller="AdministrativeDetails" asp-action="Sale">
                    <div id="show-form-body-div" class="sellerAllDetails">
                        <input type="hidden" value="@TempData["listingId"]" class="hiddenPost" id="listing-id-hidden" name="listing-id-hidden" />
                        <div class="ExcludedOrIncludedheadingdiv">
                            <div class="form-row row-cols-1 ExcludedOrIncludedrowheading">
                                <div class="col excluded-or-included-heading-column"
                                     id="excluded-or-included-heading-column">
                                    <label class="col-form-label excluded-or-included-heading-label"
                                           id="excluded-or-included-heading-label"><strong>Excluded Or Included</strong><br></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row EclusionsOrInclusionscheckbox">
                            <div class="col excluded-column"
                                 id="excluded-column">
                                <label id="excluded-or-included-excluded-label"
                                       class="excluded-or-included-excluded-label"><br>Exclusions:<br><br></label>
                                <div class="form-check excluded-or-included-exclusions-plants"
                                     id="excluded-or-included-exclusions-plants">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Plants</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusions-garden-features"
                                     id="excluded-or-included-exclusions-garden-features">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Garden Features</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusion-blinds"
                                     id="excluded-or-included-exclusion-blinds">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Blinds</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusion-blinds-or-curtains"
                                     id="excluded-or-included-exclusion-blinds-or-curtains-1">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-100">
                                    <label class="form-check-label"
                                           for="formCheck-1">Curtains</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusion-satalite-dish"
                                     id="excluded-or-included-exclusion-garden-satalite-dish">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Satalite Dish</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusions-wendy"
                                     id="excluded-or-included-exclusions-wendy">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Wendy House</label>
                                </div>
                                <div class="form-check excluded-or-included-inclusions-garden-shed"
                                     id="excluded-or-included-inclusions-garden-shed">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-103">
                                    <label class="form-check-label"
                                           for="formCheck-1">Garden Shed</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusions-safe"
                                     id="excluded-or-included-exclusions-safe">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Safe</label>
                                </div>
                            </div>
                            <div class="col" id="iclusions-column">
                                <label id="excluded-or-included-included-label"
                                       class="excluded-or-included-included-label"
                                       for="excluded-or-included-included-label"><br>Inclusions:<br><br></label>
                                <div class="form-check excluded-or-included-included-plants"
                                     id="excluded-or-included-included-plants">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Plants</label>
                                </div>
                                <div class="form-check excluded-or-included-included-garden-features"
                                     id="excluded-or-included-included-garden-features">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Garden Features<br></label>
                                </div>
                                <div class="form-check excluded-or-included-excluded-or-inclusion-blinds"
                                     id="excluded-or-included-excluded-or-inclusion-blinds">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Blinds</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusion-blinds-or-curtains"
                                     id="excluded-or-included-exclusion-blinds-or-curtains-2">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-101">
                                    <label class="form-check-label"
                                           for="formCheck-1">Curtains</label>
                                </div>
                                <div class="form-check excluded-or-included-inclusion-garden-satalite-dish"
                                     id="excluded-or-included-inclusion-garden-satalite-dish">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Satalite Dish</label>
                                </div>
                                <div class="form-check excluded-or-included-exclusions-wendy"
                                     id="excluded-or-included-exclusions-wendy">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-102">
                                    <label class="form-check-label"
                                           for="formCheck-1">Wendy House</label>
                                </div>
                                <div class="form-check excluded-or-included-inclusions-garden-shed"
                                     id="excluded-or-included-inclusions-garden-shed">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Garden Shed</label>
                                </div>
                                <div class="form-check excluded-or-included-inclusions-safe"
                                     id="excluded-or-included-inclusions-safe">
                                    <input class="form-check-input"
                                           type="checkbox" id="formCheck-1">
                                    <label class="form-check-label"
                                           for="formCheck-1">Safe</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group excluded-or-included-please-explain-other-column"
                             id="excluded-or-included-please-explain-other-column">
                            <label id="excluded-or-included-please-explain-other-label"
                                   class="excluded-or-included-please-explain-other-label">Please explain other inclusions or exclusions:<textarea class="form-control excluded-or-included-please-explain-other-input" id="excluded-or-included-please-explain-other-input" required="" minlength="2" style="width: 285px;"></textarea></label>
                        </div>
                    </div>

                    <div class="col text-center"><a class="btn btn-primary text-center" role="button" id="next-features-button" style="padding: 6px 50px; color:white;">>></a></div>


                </form>
            </div>
        </section>
    </main>
</body>
</html>
<script src="~/js/jquery.min.js"></script>
<script>
    $('input[type=radio][name=typeProperty]').change(function () {
        var radios = document.getElementsByName('typeProperty');
        for (var i = 0, length = radios.length; i < length; i++) {
            if (radios[i].checked) {
                $('#property-type-hidden').val(radios[i].value);
            }
        }
    });
    $('input[type=radio][name=listingSource]').change(function () {
        var radios = document.getElementsByName('listingSource');
        for (var i = 0, length = radios.length; i < length; i++) {
            if (radios[i].checked) {
                $('#listing-source-hidden').val(radios[i].value);
            }
        }
    });
    $('input[type=radio][name=typeFacing]').change(function () {
        var radios = document.getElementsByName('typeFacing');
        for (var i = 0, length = radios.length; i < length; i++) {
            if (radios[i].checked) {
                $('#property-facing-hidden').val(radios[i].value);
            }
        }
    });

    $("#garages-number-input").change(function () {
        var numberGarages = $("#garages-number-input").val();
        $("#Listing_Information_LU_Garages_input").val(numberGarages);

    });

    $("#next-features-button").click(function () {
        InsertExclusionsInclusions();

        window.location.href = "/AdministrativeDetails/Summary";
    });

    function InsertExclusionsInclusions() {
        var exclusionsInclusions = {};

        exclusionsInclusions.listingId = $("#listing-id-hidden").val();
        exclusionsInclusions.ExclusionPlants = $("#excluded-or-included-exclusions-plants-check").is(":checked");
        exclusionsInclusions.ExclusionGardenFeatures = $("#excluded-or-included-exclusions-garden-features-check").is(":checked");
        exclusionsInclusions.ExclusionBlinds = $("#excluded-or-included-exclusions-blinds-check").is(":checked");
        exclusionsInclusions.ExclusionCurtains = $("#excluded-or-included-exclusions-curtains-check").is(":checked");
        exclusionsInclusions.ExclusionSatelliteDish = $("#excluded-or-included-exclusions-satellite-dish-check").is(":checked");
        exclusionsInclusions.ExclusionWendyHouse = $("#excluded-or-included-exclusions-wendyhouse-check").is(":checked");
        exclusionsInclusions.ExclusionGardenShed = $("#excluded-or-included-exclusions-garden-shed-check").is(":checked");
        exclusionsInclusions.ExclusionSafe = $("#excluded-or-included-exclusions-safe-check").is(":checked");

        exclusionsInclusions.InclusionPlants = $("#excluded-or-included-inclusions-plants-check").is(":checked");
        exclusionsInclusions.InclusionGardenFeatures = $("#excluded-or-included-inclusions-garden-features-check").is(":checked");
        exclusionsInclusions.InclusionBlinds = $("#excluded-or-included-inclusions-blinds-check").is(":checked");
        exclusionsInclusions.InclusionCurtains = $("#excluded-or-included-inclusions-curtains-check").is(":checked");
        exclusionsInclusions.InclusionSatelliteDish = $("#excluded-or-included-inclusions-satellite-dish-check").is(":checked");
        exclusionsInclusions.InclusionWendyHouse = $("#excluded-or-included-inclusions-wendyhouse-check").is(":checked");
        exclusionsInclusions.InclusionGardenShed = $("#excluded-or-included-inclusions-garden-shed-check").is(":checked");
        exclusionsInclusions.InclusionSafe = $("#excluded-or-included-inclusions-safe-check").is(":checked");

        exclusionsInclusions.ExclusionInclusionComments = $("#excluded-or-included-please-explain-other-input").val();

         $.ajax(
            {
            async: false,
            type: "POST",
            url: '@Url.Action("InsertExclusionsInclusions", "AdministrativeDetails")',
                 data: { exclusionsInclusions: exclusionsInclusions },
            success: function (result) {
            },
            error: function (error) {
            }
        });
    }





</script>
