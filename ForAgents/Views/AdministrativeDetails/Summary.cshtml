    window.onload = alert(localStorage.getItem("numBathrooms"));
    $("#listing-information-bedroom-input").val(localStorage.getItem("numBedrooms"));
    $("#listings-information-study-column-input").val(localStorage.getItem("study"));
    $("#listing-information-bathrooms-input").val(localStorage.getItem("numBathrooms"));
    $("#listing-information-living-area-input").val(localStorage.getItem("numLivingAreas"))
    $("#Listing_Information_LU_Garages_input").val(localStorage.getItem("numGarages"))

    $('input[type=radio][name=typeProperty]').change(function () {
        var radios = document.getElementsByName('typeProperty');
